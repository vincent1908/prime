<?xml version="1.0" encoding="UTF-8"?>
<!-- ******************************************************************** -->
<!-- Ce fichier permet de décrire la liste des goals et des paramètres    -->
<!-- que le plugin PSA-Release doit exécuter lors d'une release. Cela     -->
<!-- évite de les passer en ligne de commande.                            -->
<!--                                                                      -->
<!-- Note : pour tester cette exécution sans faire une vraie release,     -->
<!--        lancer la commande suivante :                                 -->
<!--                                                                      -->
<!--     mvn psa-release:dry-run -DparamFile=release/release-goals.xml    -->
<!--                                                                      -->
<!-- ******************************************************************** -->
<release xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://ciq-repository.inetpsa.com/repository/virtual/com/inetpsa/jip/xsd/release/release-1.1.xsd">
  <goals>
		<goal>cleaner:clean-project-folder</goal>				
		<goal>source:jar</goal>
		<goal>deploy</goal>
		<goal>ltp-release:release-single</goal>
	</goals>
	<arguments>
		<argument>-Dfile.encoding=UTF-8</argument>
		<argument>-Dmaven.test.skip=true</argument>
		<argument>-PpsaReports,psaComponentRelease</argument>
		<argument>-DcleanerIncludes=**/distrib/*SNAPSHOT*,**distrib/zip-ressources/*SNAPSHOT*</argument>
	</arguments>
</release>